<!DOCTYPE html>
<html>
  <head>
    <title>Ludicrous</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script src="https://kit.fontawesome.com/204f8c496b.js" crossorigin="anonymous"></script>
    <% if logged_in? %>
      <script type="text/javascript">
        window.currentUser = <%= render(
            "api/users/user.json.jbuilder",
          user: current_user
        ).html_safe %>
      </script>
    <% end %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
